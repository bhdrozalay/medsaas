# ==============================================
# MedSAS Environment Configuration
# ==============================================

# Environment
NODE_ENV=development
LOG_LEVEL=debug

# ==============================================
# Database Configuration
# ==============================================

# PostgreSQL
DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/medsas"

# Service-specific databases
IDENTITY_DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/medsas_identity"
TENANT_DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/medsas_tenant"
BILLING_DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/medsas_billing"
NOTIFICATION_DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/medsas_notification"
REPORTING_DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/medsas_reporting"

# ==============================================
# Cache & Session Configuration
# ==============================================

# Redis
REDIS_URL="redis://:redis123@localhost:6379"
REDIS_SESSION_DB=0
REDIS_CACHE_DB=1

# ==============================================
# Authentication & Security
# ==============================================

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Password hashing
BCRYPT_ROUNDS=12

# Session
SESSION_SECRET="your-super-secret-session-key-change-in-production"
SESSION_MAX_AGE=86400000

# CORS
CORS_ORIGIN="http://localhost:3000,http://localhost:3002"

# ==============================================
# External Services
# ==============================================

# Email (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
EMAIL_FROM="noreply@medsas.com"

# AWS/S3 Storage
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your-access-key"
AWS_SECRET_ACCESS_KEY="your-secret-key"
S3_BUCKET="medsas-storage"

# MinIO (Local S3)
MINIO_ENDPOINT="localhost:9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin123"
MINIO_BUCKET="medsas-local"

# ==============================================
# Message Broker
# ==============================================

# NATS
NATS_URL="nats://localhost:4222"

# Kafka (Alternative)
KAFKA_BROKERS="localhost:9092"
KAFKA_CLIENT_ID="medsas"

# ==============================================
# Monitoring & Observability
# ==============================================

# Prometheus
PROMETHEUS_PORT=9090

# Jaeger
JAEGER_ENDPOINT="http://localhost:14268/api/traces"

# Sentry (Error Tracking)
SENTRY_DSN="your-sentry-dsn"

# ==============================================
# Application URLs
# ==============================================

# Frontend URLs
NEXT_PUBLIC_WEB_URL="http://localhost:3000"
NEXT_PUBLIC_ADMIN_URL="http://localhost:3002"
NEXT_PUBLIC_API_URL="http://localhost:3001"

# Internal Service URLs
API_GATEWAY_URL="http://localhost:3001"
IDENTITY_SERVICE_URL="http://localhost:3010"
TENANT_SERVICE_URL="http://localhost:3011"
BILLING_SERVICE_URL="http://localhost:3012"
NOTIFICATION_SERVICE_URL="http://localhost:3013"
REPORTING_SERVICE_URL="http://localhost:3014"

# ==============================================
# Development Settings
# ==============================================

# Hot reload
CHOKIDAR_USEPOLLING=true

# Debug
DEBUG="medsas:*"

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# Feature Flags
# ==============================================

FEATURE_MULTI_TENANCY=true
FEATURE_BILLING=true
FEATURE_ANALYTICS=true
FEATURE_NOTIFICATIONS=true
FEATURE_FILE_UPLOAD=true

# ==============================================
# Testing
# ==============================================

# Test Database
TEST_DATABASE_URL="postgresql://postgres:postgres123@localhost:5432/medsas_test"

# E2E Testing
PLAYWRIGHT_BASE_URL="http://localhost:3000"
PLAYWRIGHT_HEADLESS=true